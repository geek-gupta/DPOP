<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NotesSubCategoryActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/notes_sub_category_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_notes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/notes_sub_category_recycler_view"
        android:layout_alignRight="@+id/notes_sub_category_recycler_view"
        android:layout_alignBottom="@+id/notes_sub_category_recycler_view"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/add_main_color" />
</RelativeLayout>