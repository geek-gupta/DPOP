<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:weightSum="10"
    android:background="@drawable/background_round_ten"
    android:orientation="vertical"
    android:id="@+id/query_answer_item_recyclerview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="3"
        android:weightSum="10"
        android:background="@drawable/top_left_right_round"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/query_poster_name_text_view"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="Gaurav"
            android:textColor="#ffffff"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/liked_image_button"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_thumb_up_white_24dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/query_answer_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:text="@string/project_item_dummy_data"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"/>







</LinearLayout>

