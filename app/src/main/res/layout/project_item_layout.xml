<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:weightSum="10"
        android:background="@drawable/background_round_ten"
        android:orientation="vertical"
        android:id="@+id/project_item_recyclerview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:weightSum="10"
            android:background="@drawable/top_left_right_round"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_name_text_view"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="Gaurav"
                android:textColor="#ffffff"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/isfav_image_button"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:src="@drawable/star"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:id="@+id/project_short_desc_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:text="@string/project_item_dummy_data"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/project_owner_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Owned by: Gaurav and Lokesh"/>


        <ProgressBar

            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:progressDrawable="@drawable/progressbar_bottom_left_right_round"
            android:id="@+id/progressbar_project"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:max="100"
            android:progressTint="#008000"
            android:progress="100"/>


    </LinearLayout>

